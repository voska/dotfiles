# Docker Compose Shortcuts
{{- if lookPath "docker-compose" }}
alias dc="docker-compose"
{{- else }}
alias dc="docker compose"
{{- end }}
alias dcu="dc up -d"
alias dcd="dc down"
alias dcr="dc down && dc up -d"
alias dcb="dc build"
alias dcp="dc pull"
alias dclog="dc logs -f"
alias dcps="dc ps"
{{- end }}

