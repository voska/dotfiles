# .chezmoiignore.tmpl - Controls which files chezmoi manages

# Documentation and repo files (always ignore in home)
README.md
.editorconfig

# macOS system file
.DS_Store

# Platform-specific scripts
{{ if ne .chezmoi.os "darwin" -}}
.chezmoiscripts/darwin/**
.config/ghostty/**
Library/**
{{ end -}}
{{ if ne .chezmoi.os "linux" -}}
.chezmoiscripts/linux/**
{{ end -}}
{{ if ne .chezmoi.os "windows" -}}
.chezmoiscripts/windows/**
{{ end -}}

# GUI applications - only on machines with displays
{{ if .headless -}}
.config/cursor/**
Library/Application Support/Cursor/**
{{ end -}}


# Personal/sensitive files - only on personal machines
{{ if not .personal -}}
.ssh/**
.gnupg/**
.npmrc
{{ end -}}

# Cache and runtime directories
.cache/**
.bundle/**
.cocoapods/**
.cups/**
.docker/**
